      },
      "scale": {
        "hover": "1.02",
        "active": "0.98"
      }
    },
    "shadows": {
      "classical": "0 2px 8px rgba(128, 0, 32, 0.2)",
      "marble": "0 4px 16px rgba(245, 245, 220, 0.3)",
