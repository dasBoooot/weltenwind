        "overlayOptimized": true,
        "instantLoad": true,
        "noAnimations": true,
        "noEffects": true,
        "gamingFeatures": false,
        "visualEffects": false,
        "accessibility": "minimal"
      },
      "performance": {
        "target": "all-devices",
        "priority": "maximum-speed",
        "memoryUsage": "minimal",
        "batterySaving": true,
        "instantaneous": true
      },
      "dependencies": {
