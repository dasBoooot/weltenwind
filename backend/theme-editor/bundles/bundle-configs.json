  "bundleResolver": {
    "loadOrder": [
      "colors",
      "typography", 
      "spacing",
      "radius",
      "effects.animations",
      "effects.visual",
      "gaming.progress",
      "gaming.inventory", 
      "gaming.hud",
      "gaming.accessibility"
    ],
    "dependencies": {
      "effects.visual": ["colors"],
      "effects.animations": ["colors"],
      "gaming.inventory": ["colors", "spacing", "radius"],
      "gaming.progress": ["colors", "typography"],
      "gaming.hud": ["colors", "typography", "spacing", "gaming.progress"],
      "gaming.accessibility": ["colors", "typography", "gaming.inventory", "gaming.progress", "gaming.hud"]
    },
    "conditionalLoading": {
      "deviceTier": {
        "low": ["performance-optimized", "minimal_bundle"],
        "medium": ["world-preview", "accessibility-enhanced", "pre_game_bundle"],
        "high": ["full-gaming", "world_fire_bundle", "world_ice_bundle", "developer-preview"]
      },
      "context": {
        "pre-game": ["pre_game_bundle", "pre-game-minimal"],
        "world-preview": ["world-preview"],
        "in-game": ["full-gaming"],
        "world-themed": ["world_fire_bundle", "world_ice_bundle"],
        "overlay": ["minimal_bundle"],
        "debug": ["debug_bundle"],
        "development": ["developer-preview", "debug_bundle"]
      },
      "worldType": {
        "fire": ["world_fire_bundle"],
        "ice": ["world_ice_bundle"],
        "fantasy": ["full-gaming"],
        "scifi": ["full-gaming"],
        "medieval": ["full-gaming"]
      },
      "uiContext": {
        "login": ["pre_game_bundle"],
        "register": ["pre_game_bundle"], 
        "modal": ["minimal_bundle"],
        "overlay": ["minimal_bundle"],
        "dialog": ["minimal_bundle"]
      },
      "accessibility": {
        "required": ["accessibility-enhanced"]
      }
    }
  },
  "optimization": {
    "caching": {
      "enabled": true,
      "strategy": "bundle-based",
      "ttl": 3600,
      "versionedUrls": true
    },
    "compression": {
      "enabled": true,
      "algorithm": "gzip",
      "level": 6
    },
    "lazy-loading": {
      "enabled": true,
      "chunkSize": "25KB",
      "preloadCritical": true
