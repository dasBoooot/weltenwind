    "world_fire_bundle": {
      "name": "Fire World Theme Bundle",
      "description": "Feuerwelt-spezifisches Bundle mit warmen Farben, Feuer-Effekten und entsprechender Atmosphäre",
      "context": "world-themed",
      "priority": "medium",
      "estimatedSize": "95KB",
      "loadTime": "medium",
      "modules": {
        "required": [
          "colors",
          "typography",
          "spacing",
          "radius",
          "effects.visual",
          "effects.animations",
          "gaming.inventory",
          "gaming.progress",
          "gaming.hud"
        ],
        "optional": [
          "gaming.accessibility"
        ],
        "excluded": []
      },
      "features": {
        "worldThemed": true,
        "fireEffects": true,
        "warmColorPalette": true,
