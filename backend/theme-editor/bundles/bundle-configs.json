        "visualEffects": "subtle",
        "accessibility": "basic"
      },
      "performance": {
        "target": "all-devices",
        "priority": "instant-loading",
        "memoryUsage": "minimal",
        "batterySaving": true,
        "criticalCSS": true
      },
      "dependencies": {
        "colors": {
          "sections": ["primary", "secondary", "background", "text", "status"],
