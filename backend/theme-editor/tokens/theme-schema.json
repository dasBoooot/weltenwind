{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Weltenwind Theme Schema",
  "description": "Vollständiges JSON Schema für Weltenwind Fantasy Themes",
  "type": "object",
  "required": ["name", "version", "colors", "radius", "spacing", "typography", "components"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema reference"
    },
    "name": {
      "type": "string",
      "description": "Theme display name"
    },
    "version": {
      "type": "string",
      "description": "Theme version"
    },
    "description": {
      "type": "string", 
      "description": "Theme description"
    },
    "colors": {
      "type": "object",
      "description": "Vollständige Farbdefinitionen",
      "required": ["primary", "secondary", "tertiary", "background", "text", "status", "effects"],
      "properties": {
        "primary": {
          "type": "object",
          "required": ["value", "light", "dark"],
          "properties": {
            "value": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "light": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "dark": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "surface": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "accent": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" }
          }
        },
        "secondary": {
          "type": "object",
          "required": ["value", "light", "dark"],
          "properties": {
            "value": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "light": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "dark": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" }
          }
        },
        "tertiary": {
          "type": "object",
          "required": ["value", "light", "dark"],
          "properties": {
            "value": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "light": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "dark": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" }
          }
        },
        "background": {
          "type": "object",
          "required": ["surface_dark", "surface_darker", "surface_medium", "surface_light", "surface_white", "surface_gray"],
          "properties": {
            "surface_dark": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "surface_darker": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "surface_medium": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "surface_light": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "surface_white": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "surface_gray": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" }
          }
        },
        "text": {
          "type": "object",
          "required": ["primary", "secondary", "tertiary", "disabled", "primary_light", "secondary_light"],
          "properties": {
            "primary": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "secondary": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "tertiary": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "disabled": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "primary_light": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "secondary_light": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" }
          }
        },
        "status": {
          "type": "object",
          "required": ["success", "warning", "error", "info"],
          "properties": {
            "success": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "warning": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "error": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "info": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" }
          }
        },
        "effects": {
          "type": "object",
          "required": ["glow", "shimmer", "overlay", "glass"],
          "properties": {
            "glow": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "shimmer": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "overlay": { "type": "string", "pattern": "^#[0-9A-Fa-f]{8}$" },
            "glass": { "type": "string", "pattern": "^#[0-9A-Fa-f]{8}$" }
          }
        }
      }
    },
    "components": {
      "type": "object",
      "description": "UI Component Konfigurationen",
      "properties": {
        "appBar": {
          "type": "object",
          "properties": {
            "elevation": { "type": "number", "minimum": 0, "default": 0 },
            "centerTitle": { "type": "boolean", "default": true },
            "shadowColor": { "type": "string", "default": "transparent" },
            "surfaceTintColor": { "type": "string", "default": "transparent" },
            "systemOverlayStyle": { "type": "string", "enum": ["light", "dark"], "default": "dark" },
            "titleTextStyle": {
              "type": "object",
              "properties": {
                "fontSize": { "type": "number", "minimum": 8, "default": 24 },
                "fontWeight": { "type": "string", "enum": ["normal", "bold", "100", "200", "300", "400", "500", "600", "700", "800", "900"], "default": "bold" },
                "letterSpacing": { "type": "number", "default": -0.3 },
                "lineHeight": { "type": "number", "minimum": 0.5, "default": 1.2 }
              }
            }
          }
        },
        "card": {
          "type": "object",
          "properties": {
            "elevation": { "type": "number", "minimum": 0, "default": 0 },
            "shadowColor": { "type": "string" },
            "borderRadius": { "type": "number", "minimum": 0, "default": 16 },
            "clipBehavior": { "type": "string", "enum": ["none", "antiAlias", "hardEdge"], "default": "antiAlias" },
            "margin": { "type": "number", "minimum": 0, "default": 4 },
            "side": {
              "type": "object",
              "description": "Card border configuration",
              "properties": {
                "color": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
                "width": { "type": "number", "minimum": 0, "default": 1.0 }
              }
            }
          }
        },
        "buttons": {
          "type": "object",
          "properties": {
            "elevation": { "type": "number", "minimum": 0, "default": 0 },
            "shadowColor": { "type": "string", "default": "transparent" },
            "borderRadius": { "type": "number", "minimum": 0, "default": 12 },
            "paddingHorizontal": { "type": "number", "minimum": 0, "default": 24 },
            "paddingVertical": { "type": "number", "minimum": 0, "default": 16 },
            "borderWidth": { "type": "number", "minimum": 0, "default": 1.5 },
            "overlayColor": {
              "type": "object",
              "description": "Button interaction state colors",
              "properties": {
                "pressed": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
                "hovered": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
                "pressedOpacity": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.2 },
                "hoveredOpacity": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.1 }
              }
            },
            "textStyle": {
              "type": "object",
              "properties": {
                "fontSize": { "type": "number", "minimum": 8, "default": 16 },
                "fontWeight": { "type": "string", "enum": ["normal", "bold", "100", "200", "300", "400", "500", "600", "700", "800", "900"], "default": "600" },
                "letterSpacing": { "type": "number", "default": 0.1 },
                "lineHeight": { "type": "number", "minimum": 0.5, "default": 1.2 }
              }
            }
          }
        },
        "inputs": {
          "type": "object",
          "properties": {
            "filled": { "type": "boolean", "default": true },
            "borderRadius": { "type": "number", "minimum": 0, "default": 12 },
            "borderWidth": { "type": "number", "minimum": 0, "default": 1 },
            "focusedBorderWidth": { "type": "number", "minimum": 0, "default": 2 },
            "errorBorderWidth": { "type": "number", "minimum": 0, "default": 1.5 },
            "paddingHorizontal": { "type": "number", "minimum": 0, "default": 16 },
            "paddingVertical": { "type": "number", "minimum": 0, "default": 16 },
            "labelStyle": {
              "type": "object",
              "properties": {
                "fontSize": { "type": "number", "minimum": 8, "default": 14 },
                "fontWeight": { "type": "string", "enum": ["normal", "bold", "100", "200", "300", "400", "500", "600", "700", "800", "900"], "default": "500" },
                "letterSpacing": { "type": "number", "default": 0.1 },
                "lineHeight": { "type": "number", "minimum": 0.5, "default": 1.4 }
              }
            },
            "hintStyle": {
              "type": "object",
              "properties": {
                "fontSize": { "type": "number", "minimum": 8, "default": 16 },
                "fontWeight": { "type": "string", "enum": ["normal", "bold", "100", "200", "300", "400", "500", "600", "700", "800", "900"], "default": "normal" },
                "letterSpacing": { "type": "number", "default": 0 },
                "lineHeight": { "type": "number", "minimum": 0.5, "default": 1.4 }
              }
            }
          }
        },
        "floatingActionButton": {
          "type": "object",
          "properties": {
            "elevation": { "type": "number", "minimum": 0, "default": 6 },
            "highlightElevation": { "type": "number", "minimum": 0, "default": 12 },
            "borderRadius": { "type": "number", "minimum": 0, "default": 16 }
          }
        },
        "navigation": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "enum": ["fixed", "shifting"], "default": "fixed" },
            "elevation": { "type": "number", "minimum": 0, "default": 8 },
            "selectedLabelStyle": {
              "type": "object",
              "properties": {
                "fontSize": { "type": "number", "minimum": 8, "default": 12 },
                "fontWeight": { "type": "string", "enum": ["normal", "bold", "100", "200", "300", "400", "500", "600", "700", "800", "900"], "default": "500" },
                "letterSpacing": { "type": "number", "default": 0.5 },
                "lineHeight": { "type": "number", "minimum": 0.5, "default": 1.3 }
              }
            },
            "unselectedLabelStyle": {
              "type": "object",
              "properties": {
                "fontSize": { "type": "number", "minimum": 8, "default": 12 },
                "fontWeight": { "type": "string", "enum": ["normal", "bold", "100", "200", "300", "400", "500", "600", "700", "800", "900"], "default": "normal" },
                "letterSpacing": { "type": "number", "default": 0.5 },
                "lineHeight": { "type": "number", "minimum": 0.5, "default": 1.3 }
              }
            }
          }
        },
        "divider": {
          "type": "object",
          "properties": {
            "thickness": { "type": "number", "minimum": 0, "default": 1 },
            "space": { "type": "number", "minimum": 0, "default": 16 }
          }
        },
        "dialog": {
          "type": "object",
          "properties": {
            "elevation": { "type": "number", "minimum": 0, "default": 24 },
            "borderRadius": { "type": "number", "minimum": 0, "default": 20 },
            "borderWidth": { "type": "number", "minimum": 0, "default": 1 },
            "titleTextStyle": {
              "type": "object",
              "properties": {
                "fontSize": { "type": "number", "minimum": 8, "default": 24 },
                "fontWeight": { "type": "string", "enum": ["normal", "bold", "100", "200", "300", "400", "500", "600", "700", "800", "900"], "default": "bold" },
                "letterSpacing": { "type": "number", "default": -0.3 },
                "lineHeight": { "type": "number", "minimum": 0.5, "default": 1.2 }
              }
            },
            "contentTextStyle": {
              "type": "object",
              "properties": {
                "fontSize": { "type": "number", "minimum": 8, "default": 16 },
                "fontWeight": { "type": "string", "enum": ["normal", "bold", "100", "200", "300", "400", "500", "600", "700", "800", "900"], "default": "normal" },
                "letterSpacing": { "type": "number", "default": 0 },
                "lineHeight": { "type": "number", "minimum": 0.5, "default": 1.4 }
              }
            }
          }
        },
        "bottomSheet": {
          "type": "object",
          "properties": {
            "elevation": { "type": "number", "minimum": 0, "default": 16 },
            "borderRadius": { "type": "number", "minimum": 0, "default": 20 },
            "clipBehavior": { "type": "string", "enum": ["none", "antiAlias", "hardEdge"], "default": "antiAlias" }
          }
        }
      }
    },
    "radius": {
      "type": "object",
      "required": ["default", "small", "medium", "large", "xl"],
      "properties": {
        "default": { "type": "number", "minimum": 0, "default": 8 },
        "small": { "type": "number", "minimum": 0, "default": 6 },
        "medium": { "type": "number", "minimum": 0, "default": 8 },
        "large": { "type": "number", "minimum": 0, "default": 12 },
        "xl": { "type": "number", "minimum": 0, "default": 20 }
      }
    },
    "spacing": {
      "type": "object",
      "required": ["xs", "sm", "md", "lg", "xl", "xxl"],
      "properties": {
        "xs": { "type": "number", "minimum": 0, "default": 4 },
        "sm": { "type": "number", "minimum": 0, "default": 8 },
        "md": { "type": "number", "minimum": 0, "default": 16 },
        "lg": { "type": "number", "minimum": 0, "default": 24 },
        "xl": { "type": "number", "minimum": 0, "default": 32 },
        "xxl": { "type": "number", "minimum": 0, "default": 48 }
      }
    },
    "typography": {
      "type": "object",
      "required": ["heading", "body", "caption"],
      "properties": {
        "fontFamily": {
          "type": "object",
          "description": "Fantasy-Schriftarten Konfiguration",
          "properties": {
            "primary": { "type": "string", "default": "CinzelDecorative", "description": "Haupt-Fantasy-Schriftart" },
            "secondary": { "type": "string", "default": "Cinzel", "description": "Sekundäre Fantasy-Schriftart" },
            "body": { "type": "string", "default": "EB Garamond", "description": "Körpertext-Schriftart" },
            "monospace": { "type": "string", "default": "Fira Code", "description": "Monospace-Schriftart für Code" }
          }
        },
        "heading": {
          "type": "object",
          "required": ["fontSize", "fontWeight"],
          "properties": {
            "fontSize": { "type": "number", "minimum": 8, "default": 24 },
            "fontWeight": { "type": "string", "enum": ["normal", "bold", "100", "200", "300", "400", "500", "600", "700", "800", "900"], "default": "bold" },
            "fontFamily": { "type": "string", "default": "primary", "enum": ["primary", "secondary", "body", "monospace"] },
            "letterSpacing": { "type": "number", "default": -0.3 },
            "lineHeight": { "type": "number", "minimum": 0.5, "default": 1.2 }
          }
        },
        "body": {
          "type": "object",
          "required": ["fontSize", "fontWeight"],
          "properties": {
            "fontSize": { "type": "number", "minimum": 8, "default": 16 },
            "fontWeight": { "type": "string", "enum": ["normal", "bold", "100", "200", "300", "400", "500", "600", "700", "800", "900"], "default": "normal" },
            "fontFamily": { "type": "string", "default": "body", "enum": ["primary", "secondary", "body", "monospace"] },
            "letterSpacing": { "type": "number", "default": 0 },
            "lineHeight": { "type": "number", "minimum": 0.5, "default": 1.4 }
          }
        },
        "caption": {
          "type": "object",
          "required": ["fontSize", "fontWeight"],
          "properties": {
            "fontSize": { "type": "number", "minimum": 8, "default": 12 },
            "fontWeight": { "type": "string", "enum": ["normal", "bold", "100", "200", "300", "400", "500", "600", "700", "800", "900"], "default": "normal" },
            "fontFamily": { "type": "string", "default": "body", "enum": ["primary", "secondary", "body", "monospace"] },
            "letterSpacing": { "type": "number", "default": 0.5 },
            "lineHeight": { "type": "number", "minimum": 0.5, "default": 1.3 }
          }
        }
      }
    },
    "extensions": {
      "type": "object",
      "description": "Fantasy Theme Extensions für spezielle Effekte",
      "properties": {
        "magicGradient": {
          "type": "object",
          "description": "Magischer Gradient-Effekt",
          "properties": {
            "colors": {
              "type": "array",
              "items": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
              "minItems": 2,
              "maxItems": 4,
              "default": ["#7C6BAF", "#A594D1"]
            },
            "begin": { "type": "string", "enum": ["topLeft", "topCenter", "topRight", "centerLeft", "center", "centerRight", "bottomLeft", "bottomCenter", "bottomRight"], "default": "topLeft" },
            "end": { "type": "string", "enum": ["topLeft", "topCenter", "topRight", "centerLeft", "center", "centerRight", "bottomLeft", "bottomCenter", "bottomRight"], "default": "bottomRight" }
          }
        },
        "portalGradient": {
          "type": "object",
          "description": "Portal-Gradient-Effekt",
          "properties": {
            "colors": {
              "type": "array",
              "items": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
              "minItems": 2,
              "maxItems": 4,
              "default": ["#4A90E2", "#7C6BAF"]
            },
            "begin": { "type": "string", "enum": ["topLeft", "topCenter", "topRight", "centerLeft", "center", "centerRight", "bottomLeft", "bottomCenter", "bottomRight"], "default": "centerLeft" },
            "end": { "type": "string", "enum": ["topLeft", "topCenter", "topRight", "centerLeft", "center", "centerRight", "bottomLeft", "bottomCenter", "bottomRight"], "default": "centerRight" }
          }
        },
        "glowColor": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Glow-Effekt Farbe",
          "default": "#A594D1"
        },
        "shimmerColor": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Shimmer-Effekt Farbe",
          "default": "#7C6BAF"
        },
        "overlayColor": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{8}$",
          "description": "Overlay-Farbe mit Alpha (8 Zeichen Hex)",
          "default": "#00000040"
        },
        "glassColor": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{8}$",
          "description": "Glasmorphism-Farbe mit Alpha (8 Zeichen Hex)",
          "default": "#FFFFFF20"
        },
        "parallaxStrength": {
          "type": "number",
          "minimum": 0,
          "maximum": 5.0,
          "default": 1.0,
          "description": "Parallax-Scrolling Stärke für Hintergrund-Elemente"
        },
        "hoverAuraColor": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Farbe für Hover-Aura Effekte",
          "default": "#A594D1"
        },
        "depthBlur": {
          "type": "boolean",
          "default": true,
          "description": "Z-Depth basierte Blur-Effekte für Tiefenwirkung"
        },
        "particles": {
          "type": "object",
          "description": "Partikel-Effekt System",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "density": { "type": "string", "enum": ["low", "medium", "high"], "default": "medium" },
            "colors": {
              "type": "array",
              "items": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
              "minItems": 1,
              "maxItems": 5,
              "default": ["#7C6BAF", "#A594D1", "#4A90E2"]
            },
            "speed": { "type": "number", "minimum": 0.1, "maximum": 5.0, "default": 1.0 },
            "size": { "type": "number", "minimum": 1, "maximum": 10, "default": 3 }
          }
        },
        "screenEffects": {
          "type": "object",
          "description": "Bildschirm-weite visuelle Effekte",
          "properties": {
            "vignetteStrength": { "type": "number", "minimum": 0, "maximum": 1.0, "default": 0.3 },
            "bloomIntensity": { "type": "number", "minimum": 0, "maximum": 2.0, "default": 0.5 },
            "colorGrading": { "type": "string", "enum": ["neutral", "warm", "cool", "fantasy"], "default": "warm" },
            "weather": {
              "type": "object",
              "properties": {
                "rainOpacity": { "type": "number", "minimum": 0, "maximum": 1.0, "default": 0.6 },
                "snowOpacity": { "type": "number", "minimum": 0, "maximum": 1.0, "default": 0.4 },
                "fogIntensity": { "type": "number", "minimum": 0, "maximum": 1.0, "default": 0.3 }
              }
            }
          }
        }
      }
    },
    "gaming": {
      "type": "object",
      "description": "Gaming-spezifische UI Komponenten für RPG/Fantasy Spiele",
      "properties": {
        "progress": {
          "type": "object",
          "description": "Progress Bars für Health, Mana, XP etc.",
          "properties": {
            "barHeight": { "type": "number", "minimum": 8, "maximum": 32, "default": 12 },
            "cornerRadius": { "type": "number", "minimum": 0, "maximum": 16, "default": 8 },
            "backgroundColor": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#2A1810" },
            "foregroundColor": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#7C6BAF" },
            "borderColor": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "borderWidth": { "type": "number", "minimum": 0, "maximum": 4, "default": 1 },
            "animationDurationMs": { "type": "number", "minimum": 100, "maximum": 2000, "default": 500 },
            "specialBars": {
              "type": "object",
              "properties": {
                "health": {
                  "type": "object", 
                  "properties": {
                    "fillColor": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#E74C3C" },
                    "lowHealthColor": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#FF4444" },
                    "criticalThreshold": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.25 }
                  }
                },
                "mana": {
                  "type": "object",
                  "properties": {
                    "fillColor": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#3498DB" },
                    "lowManaColor": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#5DADE2" }
                  }
                },
                "experience": {
                  "type": "object", 
                  "properties": {
                    "fillColor": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#F39C12" },
                    "levelUpColor": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#FFD700" }
                  }
                }
              }
            }
          }
        },
        "inventory": {
          "type": "object",
          "description": "Inventory Slot System mit Rarity Colors",
          "properties": {
            "slotSize": { "type": "number", "minimum": 32, "maximum": 128, "default": 64 },
