{
  "$schema": "./theme-schema.json",
  "name": "Frostrealm",
  "version": "1.0.0",
  "description": "Frost-Theme mit kühlen Blautönen und eisigen Effekten",
  "colors": {
    "primary": {
      "value": "#2C5F7F",
      "light": "#4A7BA7",
      "dark": "#1A3A4F",
      "surface": "#0F1C26",
      "accent": "#5B8FB0"
    },
    "secondary": {
      "value": "#B8E6FF",
      "light": "#D4F1FF",
      "dark": "#7FB8CC"
    },
    "tertiary": {
      "value": "#E0F2FF",
      "light": "#F0F8FF",
      "dark": "#B8D4E6"
    },
    "background": {
      "surface_dark": "#0D1B26",
      "surface_darker": "#081119",
      "surface_medium": "#1A2B36",
      "surface_light": "#263B46",
      "surface_white": "#F8FCFF",
      "surface_gray": "#E8F4FF"
    },
    "text": {
      "primary": "#E8F4FF",
      "secondary": "#B8D4E6",
      "tertiary": "#8BB4CC",
      "disabled": "#5A7A8A",
      "primary_light": "#0D1B26",
      "secondary_light": "#2C5F7F"
    },
    "status": {
      "success": "#00CED1",
      "warning": "#87CEEB",
      "error": "#FF69B4",
      "info": "#4169E1"
    },
    "effects": {
      "glow": "#00BFFF",
      "shimmer": "#E0F6FF",
      "overlay": "#80000000",
      "glass": "#1A00BFFF"
    }
  },
  "radius": {
    "default": 16,
    "small": 12,
    "medium": 16,
    "large": 20,
    "xl": 28
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 48
  },
  "typography": {
    "heading": {
      "fontSize": 22,
      "fontWeight": "600",
      "letterSpacing": -0.2
    },
    "body": {
      "fontSize": 15,
      "fontWeight": "400",
      "lineHeight": 1.6
    },
    "caption": {
      "fontSize": 11,
      "fontWeight": "400",
      "letterSpacing": 0.3
    }
  },
  "shadows": {
    "small": {
      "blurRadius": 8,
      "spreadRadius": 0,
      "offset": [0, 2],
      "color": "#2600BFFF"
    },
    "medium": {
      "blurRadius": 16,
      "spreadRadius": 1,
      "offset": [0, 4],
      "color": "#4000BFFF"
    },
    "large": {
      "blurRadius": 24,
      "spreadRadius": 2,
      "offset": [0, 8],
      "color": "#6000BFFF"
    }
  }
}