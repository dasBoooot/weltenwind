{
  "$schema": "./theme-schema.json",
  "name": "Fireworld",
  "version": "1.0.0", 
  "description": "Feuer-Theme mit warmen Rottönen und glühenden Effekten",
  "colors": {
    "primary": {
      "value": "#8B2635",
      "light": "#A64B5A",
      "dark": "#5C1A24",
      "surface": "#2C0A0F",
      "accent": "#B85C6B"
    },
    "secondary": {
      "value": "#FF6B35",
      "light": "#FF8A5C",
      "dark": "#CC5429"
    },
    "tertiary": {
      "value": "#D4AF37",
      "light": "#E1C554",
      "dark": "#B8941F"
    },
    "background": {
      "surface_dark": "#2C1810",
      "surface_darker": "#1F100A",
      "surface_medium": "#3D2418",
      "surface_light": "#4D3026",
      "surface_white": "#FFF8F5",
      "surface_gray": "#F5E6E0"
    },
    "text": {
      "primary": "#FFEBE5",
      "secondary": "#E0C4B8",
      "tertiary": "#C4A498",
      "disabled": "#8A6B60",
      "primary_light": "#2C1810",
      "secondary_light": "#8B4513"
    },
    "status": {
      "success": "#228B22",
      "warning": "#FF8C00",
      "error": "#DC143C",
      "info": "#4682B4"
    },
    "effects": {
      "glow": "#FF4500",
      "shimmer": "#FFD700",
      "overlay": "#80000000",
      "glass": "#1AFF4500"
    }
  },
  "radius": {
    "default": 8,
    "small": 6,
    "medium": 8,
    "large": 12,
    "xl": 20
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 48
  },
  "typography": {
    "heading": {
      "fontSize": 26,
      "fontWeight": "bold",
      "letterSpacing": -0.3
    },
    "body": {
      "fontSize": 16,
      "fontWeight": "normal",
      "lineHeight": 1.4
    },
    "caption": {
      "fontSize": 12,
      "fontWeight": "normal",
      "letterSpacing": 0.5
    }
  },
  "shadows": {
    "small": {
      "blurRadius": 6,
      "spreadRadius": 1,
      "offset": [0, 3],
      "color": "#40FF4500"
    },
    "medium": {
      "blurRadius": 12,
      "spreadRadius": 2,
      "offset": [0, 6],
      "color": "#60FF4500"
    },
    "large": {
      "blurRadius": 20,
      "spreadRadius": 3,
      "offset": [0, 10],
      "color": "#80FF4500"
    }
  }
}