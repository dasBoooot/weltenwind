{
  "$schema": "../schemas/main.schema.json",
  "name": "Mystical Modular",
  "version": "1.0.0",
  "description": "Test-Theme für das neue modulare Gaming-System mit allen $refs",
  "bundle": {
    "type": "gaming",
    "context": "in-game",
    "modules": ["colors", "gaming", "responsive", "extensions"]
  },
  "metadata": {
    "author": "Weltenwind Dev Team",
    "category": "fantasy",
    "tags": ["mystical", "purple", "modular", "test"],
    "targetWorlds": ["fantasy", "magic", "mystical"],
    "compatibility": {
      "minVersion": "1.0.0",
      "features": ["gaming", "modular-themes", "animations"]
    }
  },
  "colors": {
    "primary": {
      "value": "#7C6BAF",
      "light": "#A594D1", 
      "dark": "#4A90E2",
      "surface": "#7C6BAF",
      "accent": "#A594D1"
    },
    "secondary": {
      "value": "#4A90E2",
      "light": "#7C6BAF",
      "dark": "#3498DB"
    },
    "tertiary": {
      "value": "#A594D1",
      "light": "#C0B3E0",
      "dark": "#7C6BAF"
    },
    "background": {
      "surface_dark": "#1A1A1A",
      "surface_medium": "#2A1810",
      "surface_light": "#3A2820",
      "surface_white": "#FFFFFF",
      "surface_gray": "#F0F0F0",
      "surface_gray_light": "#F8F8F8",
      "surface_darker": "#0D0D0D"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#CCCCCC", 
      "tertiary": "#999999",
      "disabled": "#666666",
      "primary_light": "#333333",
      "secondary_light": "#666666",
      "tertiary_light": "#999999"
    },
    "status": {
      "success": "#27AE60",
      "warning": "#F39C12",
      "error": "#E74C3C",
      "info": "#3498DB"
    },
    "effects": {
      "glow": "#A594D1",
      "shimmer": "#7C6BAF",
      "overlay": "#00000040",
      "glass": "#FFFFFF20"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "Inter",
      "secondary": "Poppins",
      "body": "Inter",
      "monospace": "JetBrains Mono"
    },
    "heading": {
      "fontSize": 24,
      "fontWeight": "bold",
      "letterSpacing": -0.3,
      "lineHeight": 1.2,
      "fontFamily": "Poppins"
    },
    "body": {
      "fontSize": 16,
      "fontWeight": "normal", 
      "letterSpacing": 0,
      "lineHeight": 1.4,
      "fontFamily": "Inter"
    },
    "caption": {
      "fontSize": 12,
      "fontWeight": "500",
      "letterSpacing": 0.4,
      "lineHeight": 1.3,
      "fontFamily": "Inter"
    }
  },
  "radius": {
    "small": 4,
    "medium": 8,
    "large": 16,
    "extraLarge": 24,
    "circle": 50
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 48
  },
  "components": {
    "appBar": {
      "elevation": 0,
      "centerTitle": true,
      "shadowColor": "transparent",
      "surfaceTintColor": "transparent",
      "systemOverlayStyle": "dark"
    },
    "card": {
      "elevation": 0,
      "borderRadius": 16,
      "clipBehavior": "antiAlias",
      "margin": 4
    },
    "buttons": {
      "elevation": 0,
      "shadowColor": "transparent",
      "borderRadius": 12,
      "paddingHorizontal": 24,
      "paddingVertical": 16,
      "borderWidth": 1.5
    },
    "inputs": {
      "filled": true,
      "borderRadius": 12,
      "borderWidth": 1,
      "focusedBorderWidth": 2,
      "paddingHorizontal": 16,
      "paddingVertical": 16
    }
  },
  "gaming": {
    "inventory": {
      "slots": {
        "size": 64,
        "spacing": 4,
        "borderRadius": 8,
        "borderWidth": 2,
        "backgroundColor": "#2A1810",
        "borderColor": "#7C6BAF",
        "hoverBorderColor": "#A594D1",
        "selectedBorderColor": "#FFD700",
        "disabledOpacity": 0.5
      },
      "rarity": {
        "common": {
          "color": "#FFFFFF",
          "glowIntensity": 0.0,
          "name": "Gewöhnlich"
        },
        "uncommon": {
          "color": "#1EFF00",
          "glowIntensity": 0.2,
          "name": "Ungewöhnlich"
        },
        "rare": {
          "color": "#0070DD",
          "glowIntensity": 0.4,
          "name": "Selten"
        },
        "epic": {
          "color": "#A335EE",
          "glowIntensity": 0.6,
          "name": "Episch"
        },
        "legendary": {
          "color": "#FF8000",
          "glowIntensity": 0.8,
          "name": "Legendär"
        },
        "mythic": {
          "color": "#FF0080",
          "glowIntensity": 1.0,
          "name": "Mythisch",
          "animated": true
        }
      },
      "layout": {
        "type": "grid",
        "columns": 6,
        "rows": 4,
        "maxItems": 100,
        "autoSort": false,
        "categories": {
          "enabled": true,
          "tabs": [
            { "id": "all", "name": "Alle", "icon": "inventory" },
            { "id": "weapons", "name": "Waffen", "icon": "sword", "color": "#E74C3C" },
            { "id": "armor", "name": "Rüstung", "icon": "shield", "color": "#3498DB" },
            { "id": "consumables", "name": "Verbrauchsgegenstände", "icon": "potion", "color": "#27AE60" },
            { "id": "materials", "name": "Materialien", "icon": "gem", "color": "#F39C12" },
            { "id": "quest", "name": "Quest-Items", "icon": "scroll", "color": "#9B59B6" }
          ]
        }
      },
      "interactions": {
        "hover": {
          "enabled": true,
          "effect": "glow",
          "scaleAmount": 1.05,
          "glowRadius": 8,
          "duration": 200
        },
        "selection": {
          "enabled": true,
          "multiSelect": false,
          "highlightColor": "#FFD70080",
          "borderGlow": true
        },
        "dragDrop": {
          "enabled": true,
          "ghostOpacity": 0.7,
          "dropZoneColor": "#27AE6040",
          "invalidDropColor": "#E74C3C40",
          "snapToGrid": true
        },
        "tooltip": {
          "enabled": true,
          "delay": 500,
          "maxWidth": 300,
          "showRarity": true,
          "showStats": true
        }
      }
    },
    "progress": {
      "base": {
        "height": 16,
        "borderRadius": 8,
        "borderWidth": 1,
        "backgroundColor": "#2A1810",
        "borderColor": "#7C6BAF",
        "animationDuration": 500,
        "gradient": {
          "enabled": true,
          "direction": "horizontal",
          "intensity": 0.3
        },
        "glow": {
          "enabled": false,
          "radius": 4,
          "intensity": 0.5
        }
      },
      "health": {
        "fillColor": "#E74C3C",
        "criticalThreshold": 0.25,
        "criticalColor": "#FF4444",
        "lowHealthColor": "#FF6666",
        "warningThreshold": 0.5,
        "pulse": {
          "enabled": true,
          "intensity": 0.8,
          "speed": 1.5
        },
        "regeneration": {
          "enabled": true,
          "color": "#27AE60",
          "glowColor": "#2ECC71"
        }
      },
      "mana": {
        "fillColor": "#3498DB",
        "lowManaThreshold": 0.3,
        "lowManaColor": "#5DADE2",
        "shimmer": {
          "enabled": true,
          "color": "#85C1E9",
          "speed": 1.2,
          "intensity": 0.6
        },
        "spellCast": {
          "enabled": true,
          "glowColor": "#AED6F1",
          "flashDuration": 300
        }
      },
      "experience": {
        "fillColor": "#F39C12",
        "levelUpColor": "#FFD700",
        "nearLevelUpThreshold": 0.9,
        "nearLevelUpColor": "#F7DC6F",
        "levelUp": {
          "enabled": true,
          "flashColor": "#FFD700",
          "glowRadius": 15,
          "duration": 1500,
          "sparkles": true
        },
        "segments": {
          "enabled": false,
          "count": 10,
          "spacing": 2
        }
      }
    },
    "hud": {
      "minimap": {
        "size": 150,
        "borderRadius": 8,
        "backgroundColor": "#00000080",
        "borderColor": "#7C6BAF",
        "borderWidth": 2,
        "player": {
          "color": "#FFD700",
          "size": 6,
          "glowRadius": 3,
          "showDirection": true
        },
        "enemies": {
          "enabled": true,
          "color": "#E74C3C",
          "size": 4,
          "bossColor": "#8B0000",
          "bossSize": 8,
          "aggroColor": "#FF4500"
        },
        "npcs": {
          "enabled": true,
          "color": "#3498DB",
          "size": 3,
          "questGiverColor": "#F39C12",
          "merchantColor": "#27AE60"
        },
        "points": {
          "enabled": true,
          "treasureColor": "#FFD700",
          "portalColor": "#9370DB",
          "dangerZoneColor": "#DC143C"
        },
        "zoom": {
          "enabled": true,
          "minZoom": 0.5,
          "maxZoom": 3.0,
          "defaultZoom": 1.0
        }
      },
      "buffBar": {
        "iconSize": 32,
        "spacing": 4,
        "maxBuffs": 10,
        "layout": "horizontal",
        "positive": {
          "borderColor": "#27AE60",
          "glowColor": "#2ECC71",
          "borderWidth": 2
        },
        "negative": {
          "borderColor": "#E74C3C",
          "glowColor": "#EC7063",
          "borderWidth": 2,
          "pulse": true
        },
        "duration": {
          "enabled": true,
          "position": "bottom",
          "fontSize": 10,
          "textColor": "#FFFFFF",
          "backgroundColor": "#00000080"
        },
        "stacks": {
          "enabled": true,
          "position": "corner",
          "fontSize": 12,
          "textColor": "#FFD700"
        }
      },
      "resourceDisplay": {
        "layout": "horizontal",
        "backgroundColor": "#2A181080",
        "borderRadius": 8,
        "padding": 8,
        "gold": {
          "enabled": true,
          "color": "#FFD700",
          "icon": "coin",
          "fontSize": 16,
          "animated": true,
          "gainColor": "#27AE60",
          "lossColor": "#E74C3C"
        },
        "gems": {
          "enabled": false,
          "color": "#9B59B6",
          "icon": "gem",
          "glowEffect": true
        },
        "items": {
          "enabled": true,
          "maxVisible": 5,
          "iconSize": 20,
          "fontSize": 12,
          "textColor": "#FFFFFF"
        }
      },
      "notifications": {
        "toast": {
          "enabled": true,
          "position": "top-center",
          "maxVisible": 3,
          "duration": 4000,
          "backgroundColor": "#2A1810E6",
          "borderColor": "#7C6BAF",
          "textColor": "#FFFFFF",
          "types": {
            "success": "#27AE60",
            "error": "#E74C3C",
            "warning": "#F39C12",
            "info": "#3498DB"
          }
        },
        "floatingText": {
          "enabled": true,
          "fontSize": 18,
          "duration": 1500,
          "damage": {
            "color": "#E74C3C",
            "criticalColor": "#FF8000",
            "criticalSize": 1.5
          },
          "healing": {
            "color": "#27AE60",
            "glowColor": "#2ECC71"
          },
          "experience": {
            "color": "#F39C12",
            "bonusColor": "#FFD700"
          }
        }
      },
      "positioning": {
        "anchors": {
          "minimap": "top-right",
          "buffBar": "top-left",
          "resourceDisplay": "top-center"
        },
        "margins": {
          "top": 20,
          "right": 20,
          "bottom": 20,
          "left": 20
        },
        "responsive": {
          "enabled": true,
          "mobileScale": 0.8,
          "tabletScale": 0.9,
          "hideOnMobile": ["floatingText"]
        }
      }
    }
  },
  "responsive": {
    "breakpoints": {
      "mobile": 576,
      "tablet": 768,
      "desktop": 1024,
      "wide": 1440
    },
    "scaleFactor": {
      "mobile": 0.85,
      "tablet": 0.95,
      "desktop": 1.0,
      "wide": 1.1
    },
    "adaptiveSpacing": true,
    "adaptiveTypography": true
  },
  "shadows": {
    "small": {
      "blurRadius": 2,
      "spreadRadius": 0,
      "offset": [0, 1],
      "color": "#00000020"
    },
    "medium": {
      "blurRadius": 4,
      "spreadRadius": 0,
      "offset": [0, 2],
      "color": "#00000030"
    },
    "large": {
      "blurRadius": 8,
      "spreadRadius": 0,
      "offset": [0, 4],
      "color": "#00000040"
    }
  },
  "conditions": {
    "enabled": false,
    "rules": []
  },
  "extensions": {
    "magicGradient": ["#7C6BAF", "#A594D1", "#4A90E2"],
    "portalGradient": ["#4A90E2", "#7C6BAF"],
    "parallaxStrength": 0.3,
    "hoverAuraColor": "#A594D1",
    "depthBlur": {
      "enabled": false,
      "intensity": 2,
      "focusDistance": 50
    },
    "particles": {
      "enabled": false,
      "density": 0.5,
      "color": "#A594D1"
    },
    "screenEffects": {
      "vignette": 0.2,
      "bloom": 0.1,
      "colorGrading": "fantasy",
      "weather": "none"
    }
  }
}