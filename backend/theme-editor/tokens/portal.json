{
  "$schema": "./theme-schema.json",
  "name": "Portal Weltenwind",
  "version": "1.0.0", 
  "description": "Portal-Theme mit kühlen Aqua-Tönen und Reise-Ästhetik",
  "colors": {
    "primary": {
      "value": "#20B2AA",
      "light": "#4DD0D1",
      "dark": "#008B8B",
      "surface": "#0A1A1A",
      "accent": "#7C6BAF"
    },
    "secondary": {
      "value": "#4B3B79",
      "light": "#6A5394",
      "dark": "#2E1F4A"
    },
    "tertiary": {
      "value": "#7C6BAF", 
      "light": "#9B89CC",
      "dark": "#5C4D8F"
    },
    "background": {
      "surface_dark": "#0A1212",
      "surface_darker": "#041010",
      "surface_medium": "#0F1E1E",
      "surface_light": "#152C2C",
      "surface_white": "#F0FFFF",
      "surface_gray": "#E8F5F5"
    },
    "text": {
      "primary": "#E0F8F8",
      "secondary": "#B8E6E6",
      "tertiary": "#98D4D4",
      "disabled": "#68A8A8",
      "primary_light": "#0A1212",
      "secondary_light": "#2F4F4F"
    },
    "status": {
      "success": "#00BCD4",
      "warning": "#FF9800",
      "error": "#E91E63",
      "info": "#2196F3"
    },
    "effects": {
      "glow": "#20B2AA",
      "shimmer": "#4DD0D1", 
      "overlay": "#80000000",
      "glass": "#1A20B2AA"
    }
  },
  "radius": {
    "default": 8,
    "small": 6,
    "medium": 8,
    "large": 12,
    "xl": 20
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 48
  },
  "typography": {
    "heading": {
      "fontSize": 24,
      "fontWeight": "bold",
      "letterSpacing": -0.3
    },
    "body": {
      "fontSize": 16,
      "fontWeight": "normal",
      "lineHeight": 1.4
    },
    "caption": {
      "fontSize": 12,
      "fontWeight": "normal",
      "letterSpacing": 0.5
    }
  },
  "shadows": {
    "small": {
      "blurRadius": 6,
      "spreadRadius": 1,
      "offset": [0, 3],
      "color": "#4020B2AA"
    },
    "medium": {
      "blurRadius": 12,
      "spreadRadius": 2,
      "offset": [0, 6],
      "color": "#6020B2AA" 
    },
    "large": {
      "blurRadius": 20,
      "spreadRadius": 3,
      "offset": [0, 10],
      "color": "#8020B2AA"
    }
  }
}