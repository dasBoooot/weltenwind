{
  "$schema": "./theme-schema.json",
  "name": "Default Weltenwind",
  "version": "1.0.0",
  "description": "Standard Weltenwind Theme mit mystischer Fantasy-Ã„sthetik",
  "colors": {
    "primary": {
      "value": "#4B3B79",
      "light": "#6A5394",
      "dark": "#2E1F4A",
      "surface": "#1A1025",
      "accent": "#7C6BAF"
    },
    "secondary": {
      "value": "#D4AF37",
      "light": "#E1C554",
      "dark": "#B8941F"
    },
    "tertiary": {
      "value": "#4C6B4A",
      "light": "#6B8A69",
      "dark": "#2D4B2B"
    },
    "background": {
      "surface_dark": "#1E1E2E",
      "surface_darker": "#141420",
      "surface_medium": "#2A2A3E",
      "surface_light": "#3A3A52",
      "surface_white": "#F8F9FA",
      "surface_gray": "#E9ECEF"
    },
    "text": {
      "primary": "#E0E0E0",
      "secondary": "#B0B0B0",
      "tertiary": "#808080",
      "disabled": "#505060",
      "primary_light": "#1F2937",
      "secondary_light": "#6B7280"
    },
    "status": {
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#3B82F6"
    },
    "effects": {
      "glow": "#9D4EDD",
      "shimmer": "#FFD700",
      "overlay": "#80000000",
      "glass": "#1AFFFFFF"
    }
  },
  "radius": {
    "default": 12,
    "small": 8,
    "medium": 12,
    "large": 16,
    "xl": 24
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 48
  },
  "typography": {
    "heading": {
      "fontSize": 24,
      "fontWeight": "bold",
      "letterSpacing": -0.5
    },
    "body": {
      "fontSize": 16,
      "fontWeight": "normal",
      "lineHeight": 1.5
    },
    "caption": {
      "fontSize": 12,
      "fontWeight": "normal",
      "letterSpacing": 0.4
    }
  },
  "shadows": {
    "small": {
      "blurRadius": 4,
      "spreadRadius": 0,
      "offset": [
        0,
        2
      ],
      "color": "#1A000000"
    },
    "medium": {
      "blurRadius": 8,
      "spreadRadius": 0,
      "offset": [
        0,
        4
      ],
      "color": "#26000000"
    },
    "large": {
      "blurRadius": 16,
      "spreadRadius": 0,
      "offset": [
        0,
        8
      ],
      "color": "#33000000"
    }
  }
}