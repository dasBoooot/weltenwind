{
  "$schema": "../schemas/main.schema.json",
  "name": "Portal Weltenwind",
  "version": "2.0.0", 
  "description": "Portal-Theme mit kühlen Aqua-Tönen und Reise-Ästhetik - Modernized for Modular System",
  "bundle": {
    "type": "basic",
    "context": "universal",
    "modules": ["colors", "typography", "spacing", "radius", "shadows", "extensions"]
  },
  "metadata": {
    "author": "Weltenwind Team",
    "category": "fantasy",
    "tags": ["portal", "aqua", "travel", "cool", "interdimensional"],
    "targetWorlds": ["water", "ice", "portal", "dimension", "ethereal"],
    "compatibility": {
      "minVersion": "1.0.0",
      "features": ["basic-ui", "shadows", "effects"]
    }
  },
  "colors": {
    "primary": {
      "value": "#20B2AA",
      "light": "#4DD0D1",
      "dark": "#008B8B",
      "surface": "#0A1A1A",
      "accent": "#7C6BAF"
    },
    "secondary": {
      "value": "#4B3B79",
      "light": "#6A5394",
      "dark": "#2E1F4A"
    },
    "tertiary": {
      "value": "#7C6BAF", 
      "light": "#9B89CC",
      "dark": "#5C4D8F"
    },
    "background": {
      "surface_dark": "#0A1212",
      "surface_darker": "#041010",
      "surface_medium": "#0F1E1E",
      "surface_light": "#152C2C",
      "surface_white": "#F0FFFF",
      "surface_gray": "#E8F5F5",
      "surface_gray_light": "#F0FAFA"
    },
    "text": {
      "primary": "#E0F8F8",
      "secondary": "#B8E6E6",
      "tertiary": "#98D4D4",
      "disabled": "#68A8A8",
      "primary_light": "#0A1212",
      "secondary_light": "#2F4F4F",
      "tertiary_light": "#708090"
    },
    "status": {
      "success": "#00BCD4",
      "warning": "#FF9800",
      "error": "#E91E63",
      "info": "#2196F3"
    },
    "effects": {
      "glow": "#20B2AA",
      "shimmer": "#4DD0D1", 
      "overlay": "#80000000",
      "glass": "#1A20B2AA"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "Inter",
      "secondary": "Orbitron",
      "body": "Inter",
      "monospace": "JetBrains Mono"
    },
    "heading": {
      "fontSize": 24,
      "fontWeight": "bold",
      "letterSpacing": -0.3,
      "lineHeight": 1.2,
      "fontFamily": "Orbitron"
    },
    "body": {
      "fontSize": 16,
      "fontWeight": "normal",
      "letterSpacing": 0,
      "lineHeight": 1.4,
      "fontFamily": "Inter"
    },
    "caption": {
      "fontSize": 12,
      "fontWeight": "500",
      "letterSpacing": 0.5,
      "lineHeight": 1.3,
      "fontFamily": "Inter"
    }
  },
  "radius": {
    "small": 6,
    "medium": 8,
    "large": 12,
    "extraLarge": 20,
    "circle": 50
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 48
  },
  "components": {
    "appBar": {
      "elevation": 1,
      "centerTitle": true,
      "shadowColor": "#4020B2AA",
      "surfaceTintColor": "transparent",
      "systemOverlayStyle": "dark"
    },
    "card": {
      "elevation": 3,
      "shadowColor": "#4020B2AA",
      "borderRadius": 12,
      "clipBehavior": "antiAlias",
      "margin": 5
    },
    "buttons": {
      "elevation": 1,
      "shadowColor": "#4020B2AA",
      "borderRadius": 10,
      "paddingHorizontal": 22,
      "paddingVertical": 15,
      "borderWidth": 1.8
    },
    "inputs": {
      "filled": true,
      "borderRadius": 10,
      "borderWidth": 1.2,
      "focusedBorderWidth": 2.2,
      "paddingHorizontal": 15,
      "paddingVertical": 15
    }
  },
  "responsive": {
    "breakpoints": {
      "mobile": 576,
      "tablet": 768,
      "desktop": 1024,
      "wide": 1440
    },
    "scaleFactor": {
      "mobile": 0.87,
      "tablet": 0.93,
      "desktop": 1.0,
      "wide": 1.07
    },
    "adaptiveSpacing": true,
    "adaptiveTypography": true
  },
  "shadows": {
    "small": {
      "blurRadius": 6,
      "spreadRadius": 1,
      "offset": [0, 3],
      "color": "#4020B2AA"
    },
    "medium": {
      "blurRadius": 12,
      "spreadRadius": 2,
      "offset": [0, 6],
      "color": "#6020B2AA" 
    },
    "large": {
      "blurRadius": 20,
      "spreadRadius": 3,
      "offset": [0, 10],
      "color": "#8020B2AA"
    }
  },
  "conditions": {
    "enabled": false,
    "rules": []
  },
  "extensions": {
    "magicGradient": ["#20B2AA", "#4DD0D1", "#7C6BAF"],
    "portalGradient": ["#008B8B", "#20B2AA", "#4B3B79"],
    "parallaxStrength": 0.5,
    "hoverAuraColor": "#4DD0D1",  
    "depthBlur": {
      "enabled": true,
      "intensity": 4,
      "focusDistance": 40
    },
    "particles": {
      "enabled": true,
      "density": 0.8,
      "color": "#20B2AA"
    },
    "screenEffects": {
      "vignette": 0.25,
      "bloom": 0.15,
      "colorGrading": "cool",
      "weather": "none"
    }
  }
}