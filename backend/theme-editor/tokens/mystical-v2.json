{
  "$schema": "../schemas/main.schema.json",
  "name": "Mystical Weltenwind",
  "version": "2.0.0",
  "description": "Mystisches Fantasy-Theme mit magischen Indigo-Tönen und glühenden Effekten - Modernized for Modular System",
  "bundle": {
    "type": "basic",
    "context": "universal",
    "modules": ["colors", "typography", "spacing", "radius", "components", "shadows", "extensions"]
  },
  "metadata": {
    "author": "Weltenwind Team",
    "category": "fantasy",
    "tags": ["mystical", "purple", "indigo", "magical", "glow"],
    "targetWorlds": ["fantasy", "magic", "mystical", "arcane"],
    "compatibility": {
      "minVersion": "1.0.0",
      "features": ["basic-ui", "shadows", "effects"]
    }
  },
  "colors": {
    "primary": {
      "value": "#4B3B79",
      "light": "#6A5394", 
      "dark": "#2E1F4A",
      "surface": "#1A1025",
      "accent": "#7C6BAF"
    },
    "secondary": {
      "value": "#D4AF37",
      "light": "#E1C554",
      "dark": "#B8941F"
    },
    "tertiary": {
      "value": "#20B2AA",
      "light": "#4DD0D1",
      "dark": "#008B8B"
    },
    "background": {
      "surface_dark": "#121212",
      "surface_darker": "#0A0A0A",
      "surface_medium": "#1E1E1E",
      "surface_light": "#2C2C2E",
      "surface_white": "#FFFFFF",
      "surface_gray": "#F5F5F5",
      "surface_gray_light": "#F8F8F8"
    },
    "text": {
      "primary": "#E0E0E0",
      "secondary": "#B0B0B0",
      "tertiary": "#808080",
      "disabled": "#606060",
      "primary_light": "#121212",
      "secondary_light": "#404040",
      "tertiary_light": "#666666"
    },
    "status": {
      "success": "#4CAF50",
      "warning": "#FF9800", 
      "error": "#F44336",
      "info": "#2196F3"
    },
    "effects": {
      "glow": "#7C6BAF",
      "shimmer": "#D4AF37",
      "overlay": "#80000000",
      "glass": "#1A7C6BAF"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "Inter",
      "secondary": "Cinzel",
      "body": "Inter",
      "monospace": "JetBrains Mono"
    },
    "heading": {
      "fontSize": 24,
      "fontWeight": "bold",
      "letterSpacing": -0.3,
      "lineHeight": 1.2,
      "fontFamily": "Cinzel"
    },
    "body": {
      "fontSize": 16,
      "fontWeight": "normal",
      "letterSpacing": 0,
      "lineHeight": 1.4,
      "fontFamily": "Inter"
    },
    "caption": {
      "fontSize": 12,
      "fontWeight": "500", 
      "letterSpacing": 0.5,
      "lineHeight": 1.3,
      "fontFamily": "Inter"
    }
  },
  "radius": {
    "small": 6,
    "medium": 8,
    "large": 12,
    "extraLarge": 20,
    "circle": 50
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 48
  },
  "components": {
    "appBar": {
      "elevation": 0,
      "centerTitle": true,
      "shadowColor": "transparent",
      "surfaceTintColor": "transparent",
      "systemOverlayStyle": "dark"
    },
    "card": {
      "elevation": 0,
      "shadowColor": "#40000000",
      "borderRadius": 16,
      "clipBehavior": "antiAlias",
      "margin": 4
    },
    "buttons": {
      "elevation": 0,
      "shadowColor": "transparent",
      "borderRadius": 12,
      "paddingHorizontal": 24,
      "paddingVertical": 16,
      "borderWidth": 1.5
    },
    "inputs": {
      "filled": true,
      "borderRadius": 12,
      "borderWidth": 1,
      "focusedBorderWidth": 2,
      "paddingHorizontal": 16,
      "paddingVertical": 16
    }
  },
  "responsive": {
    "breakpoints": {
      "mobile": 576,
      "tablet": 768,
      "desktop": 1024,
      "wide": 1440
    },
    "scaleFactor": {
      "mobile": 0.9,
      "tablet": 0.95,
      "desktop": 1.0,
      "wide": 1.05
    },
    "adaptiveSpacing": true,
    "adaptiveTypography": true
  },
  "shadows": {
    "small": {
      "blurRadius": 6,
      "spreadRadius": 1,
      "offset": [0, 3],
      "color": "#407C6BAF"
    },
    "medium": {
      "blurRadius": 12,
      "spreadRadius": 2,
      "offset": [0, 6],
      "color": "#607C6BAF"
    },
    "large": {
      "blurRadius": 20,
      "spreadRadius": 3,
      "offset": [0, 10],
      "color": "#807C6BAF"
    }
  },
  "conditions": {
    "enabled": false,
    "rules": []
  },
  "extensions": {
    "magicGradient": ["#4B3B79", "#7C6BAF", "#D4AF37"],
    "portalGradient": ["#20B2AA", "#4B3B79"],
    "parallaxStrength": 0.4,
    "hoverAuraColor": "#7C6BAF",
    "depthBlur": {
      "enabled": true,
      "intensity": 3,
      "focusDistance": 60
    },
    "particles": {
      "enabled": true,
      "density": 0.7,
      "color": "#7C6BAF"
    },
    "screenEffects": {
      "vignette": 0.3,
      "bloom": 0.2,
      "colorGrading": "fantasy",
      "weather": "none"
    }
  }
}