{
  "$schema": "./theme-schema.json",
  "name": "Mystical Weltenwind",
  "version": "1.0.0",
  "description": "Mystisches Fantasy-Theme mit magischen Indigo-Tönen und glühenden Effekten",
  "colors": {
    "primary": {
      "value": "#4B3B79",
      "light": "#6A5394", 
      "dark": "#2E1F4A",
      "surface": "#1A1025",
      "accent": "#7C6BAF"
    },
    "secondary": {
      "value": "#D4AF37",
      "light": "#E1C554",
      "dark": "#B8941F"
    },
    "tertiary": {
      "value": "#20B2AA",
      "light": "#4DD0D1",
      "dark": "#008B8B"
    },
    "background": {
      "surface_dark": "#121212",
      "surface_darker": "#0A0A0A",
      "surface_medium": "#1E1E1E",
      "surface_light": "#2C2C2E",
      "surface_white": "#FFFFFF",
      "surface_gray": "#F5F5F5"
    },
    "text": {
      "primary": "#E0E0E0",
      "secondary": "#B0B0B0",
      "tertiary": "#808080",
      "disabled": "#606060",
      "primary_light": "#121212",
      "secondary_light": "#404040"
    },
    "status": {
      "success": "#4CAF50",
      "warning": "#FF9800", 
      "error": "#F44336",
      "info": "#2196F3"
    },
    "effects": {
      "glow": "#7C6BAF",
      "shimmer": "#D4AF37",
      "overlay": "#80000000",
      "glass": "#1A7C6BAF"
    }
  },
  "radius": {
    "default": 8,
    "small": 6,
    "medium": 8, 
    "large": 12,
    "xl": 20
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 48
  },
  "typography": {
    "heading": {
      "fontSize": 24,
      "fontWeight": "bold",
      "letterSpacing": -0.3
    },
    "body": {
      "fontSize": 16,
      "fontWeight": "normal",
      "lineHeight": 1.4
    },
    "caption": {
      "fontSize": 12,
      "fontWeight": "normal", 
      "letterSpacing": 0.5
    }
  },
    "components": {
    "appBar": {
      "elevation": 0,
      "centerTitle": true,
      "shadowColor": "transparent",
      "surfaceTintColor": "transparent"
    },
    "card": {
      "elevation": 0,
      "shadowColor": "#40000000",
      "borderRadius": 16,
      "clipBehavior": "antiAlias",
      "margin": 4
    },
    "buttons": {
      "elevation": 0,
      "shadowColor": "transparent",
      "borderRadius": 12,
      "paddingHorizontal": 24,
      "paddingVertical": 16,
      "borderWidth": 1.5
    },
    "inputs": {
      "filled": true,
      "borderRadius": 12,
      "borderWidth": 1,
      "focusedBorderWidth": 2,
      "errorBorderWidth": 1.5,
      "paddingHorizontal": 16,
      "paddingVertical": 16
    },
    "floatingActionButton": {
      "elevation": 8,
      "highlightElevation": 16,
      "borderRadius": 16
    },
    "navigation": {
      "type": "fixed",
      "elevation": 12
    },
    "divider": {
      "thickness": 1,
      "space": 16
    },
    "dialog": {
      "elevation": 32,
      "borderRadius": 20,
      "borderWidth": 1
    },
    "bottomSheet": {
      "elevation": 24,
      "borderRadius": 20,
      "clipBehavior": "antiAlias"
    }
  },
  "shadows": {
    "small": {
      "blurRadius": 6,
      "spreadRadius": 1,
      "offset": [0, 3],
      "color": "#407C6BAF"
    },
    "medium": {
      "blurRadius": 12,
      "spreadRadius": 2,
      "offset": [0, 6],
      "color": "#607C6BAF"
    },
    "large": {
      "blurRadius": 20,
      "spreadRadius": 3,
      "offset": [0, 10],
      "color": "#807C6BAF"
    }
  }
}