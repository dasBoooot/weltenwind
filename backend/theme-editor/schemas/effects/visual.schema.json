{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://weltenwind.game/schemas/effects/visual.schema.json",
  "title": "Weltenwind Visual Effects Schema",
  "description": "Magic Gradients, Particles, Glow/Shimmer Effects und Advanced Visual Features für Fantasy Gaming",
  "type": "object",
  "required": ["gradients", "glow", "particles"],
  "properties": {
    "gradients": {
      "type": "object",
      "description": "Magische Gradient-Systeme für Fantasy-UI",
      "required": ["magic", "portal"],
      "properties": {
        "magic": {
          "type": "object",
          "description": "Standard-Magie Gradients für UI-Elemente",
          "required": ["colors", "direction"],
          "properties": {
            "colors": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^#[0-9A-Fa-f]{6}$"
              },
              "minItems": 2,
              "maxItems": 5,
              "default": ["#7C6BAF", "#A594D1"],
              "description": "Gradient Farbstops für magische Effekte"
            },
            "direction": {
              "type": "string",
              "enum": ["horizontal", "vertical", "diagonal", "radial", "conic"],
              "default": "diagonal",
              "description": "Gradient-Richtung"
            },
            "angle": {
              "type": "number",
              "minimum": 0,
              "maximum": 360,
              "default": 45,
              "description": "Gradient-Winkel in Grad (für linear gradients)"
            },
            "stops": {
              "type": "array",
              "items": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "description": "Gradient-Stops Positionen (0-1)"
            },
            "animated": {
              "type": "boolean",
              "default": false,
              "description": "Animierter Gradient-Effekt"
            },
            "animationSpeed": {
              "type": "number",
              "minimum": 0.1,
              "maximum": 5.0,
              "default": 1.0,
              "description": "Animation-Geschwindigkeit"
            }
          }
        },
        "portal": {
          "type": "object",
          "description": "Portal/Teleportation Gradients",
          "required": ["colors", "direction"],
          "properties": {
            "colors": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^#[0-9A-Fa-f]{6}$"
              },
              "minItems": 2,
              "maxItems": 5,
              "default": ["#4A90E2", "#7C6BAF"],
              "description": "Portal-Gradient Farben"
            },
            "direction": {
              "type": "string",
              "enum": ["horizontal", "vertical", "diagonal", "radial", "conic"],
              "default": "radial",
              "description": "Portal-Gradient Richtung"
            },
            "angle": {
              "type": "number",
              "minimum": 0,
              "maximum": 360,
              "default": 0
            },
            "animated": {
              "type": "boolean",
              "default": true,
              "description": "Portal-Gradient Animation"
            },
            "animationSpeed": {
              "type": "number",
              "minimum": 0.1,
              "maximum": 3.0,
              "default": 0.8
            },
            "swirl": {
              "type": "boolean",
              "default": true,
              "description": "Spiral/Wirbel-Effekt für Portale"
            }
          }
        },
        "elemental": {
          "type": "object",
          "description": "Elementar-Gradients für verschiedene Magie-Arten",
          "properties": {
            "fire": {
              "type": "object",
              "properties": {
                "colors": {
                  "type": "array",
                  "items": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
                  "default": ["#FF4500", "#FF8C00", "#FFD700"]
                },
                "animated": { "type": "boolean", "default": true },
                "flickering": { "type": "boolean", "default": true }
              }
            },
            "ice": {
              "type": "object",
              "properties": {
                "colors": {
                  "type": "array",
                  "items": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
                  "default": ["#00BFFF", "#87CEEB", "#F0F8FF"]
                },
                "animated": { "type": "boolean", "default": true },
                "crystalline": { "type": "boolean", "default": true }
              }
            },
            "nature": {
              "type": "object",
              "properties": {
                "colors": {
                  "type": "array",
                  "items": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
                  "default": ["#228B22", "#32CD32", "#98FB98"]
                },
                "animated": { "type": "boolean", "default": true },
                "organic": { "type": "boolean", "default": true }
              }
            },
            "shadow": {
              "type": "object",
              "properties": {
                "colors": {
                  "type": "array",
                  "items": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
                  "default": ["#4B0082", "#800080", "#9932CC"]
                },
                "animated": { "type": "boolean", "default": true },
                "ethereal": { "type": "boolean", "default": true }
              }
            }
          }
        },
        "ui": {
          "type": "object",
          "description": "UI-spezifische Gradients für Buttons, Cards, etc.",
          "properties": {
            "button": {
              "type": "object",
              "properties": {
                "normal": {
                  "type": "array",
                  "items": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
                  "default": ["#7C6BAF", "#8E7CC3"]
                },
                "hover": {
                  "type": "array", 
                  "items": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
                  "default": ["#A594D1", "#B3A6E0"]
                },
                "pressed": {
                  "type": "array",
                  "items": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
                  "default": ["#4B3B79", "#5C4D8F"]
                }
              }
            },
            "card": {
              "type": "array",
              "items": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
              "default": ["#2A1810", "#3A2820"]
            }
          }
        }
      },
      "additionalProperties": false
    },
    "glow": {
      "type": "object",
      "description": "Glow/Shimmer Effekt-System",
      "required": ["base"],
      "properties": {
        "base": {
          "type": "object",
          "description": "Basis-Glow Konfiguration",
          "required": ["color", "radius", "intensity"],
          "properties": {
            "color": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$",
              "default": "#A594D1",
              "description": "Standard-Glow Farbe"
            },
            "radius": {
              "type": "number",
              "minimum": 0,
              "maximum": 50,
              "default": 8,
              "description": "Glow-Radius in Pixeln"
            },
            "intensity": {
              "type": "number",
              "minimum": 0,
              "maximum": 2.0,
              "default": 0.6,
              "description": "Glow-Intensität"
            },
            "spread": {
              "type": "number",
              "minimum": 0,
              "maximum": 20,
              "default": 2,
              "description": "Glow-Ausbreitung"
            }
          }
        },
        "hover": {
          "type": "object",
          "description": "Hover-Glow Effekte",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Hover-Glow aktiviert"
            },
            "color": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$",
              "default": "#FFD700",
              "description": "Hover-Glow Farbe"
            },
            "intensityMultiplier": {
              "type": "number",
              "minimum": 1.0,
              "maximum": 3.0,
              "default": 1.5,
              "description": "Intensitäts-Multiplikator bei Hover"
            },
            "duration": {
              "type": "number",
              "minimum": 100,
              "maximum": 1000,
              "default": 200,
              "description": "Hover-Transition Dauer"
            }
          }
        },
        "selection": {
          "type": "object", 
          "description": "Selection-Glow für ausgewählte Elemente",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "color": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$",
              "default": "#FFD700"
            },
            "pulse": {
              "type": "boolean",
              "default": true,
              "description": "Pulsing-Effekt bei Selection"
            },
            "pulseSpeed": {
              "type": "number",
              "minimum": 0.5,
              "maximum": 3.0,
              "default": 1.2
            }
          }
        },
        "rarity": {
          "type": "object",
          "description": "Rarity-basierte Glow-Effekte",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "legendary": {
              "type": "object",
              "properties": {
                "color": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#FF8000" },
                "radius": { "type": "number", "minimum": 5, "maximum": 25, "default": 12 },
                "animated": { "type": "boolean", "default": true }
              }
            },
            "mythic": {
              "type": "object",
              "properties": {
                "color": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#FFD700" },
                "radius": { "type": "number", "minimum": 8, "maximum": 30, "default": 16 },
                "animated": { "type": "boolean", "default": true },
                "rainbow": { "type": "boolean", "default": true }
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "particles": {
      "type": "object",
      "description": "Partikel-System für magische Effekte",
      "required": ["base"],
      "properties": {
        "base": {
          "type": "object",
          "description": "Basis-Partikel Konfiguration",
          "required": ["enabled", "density", "color"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Partikel-System aktiviert"
            },
            "density": {
              "type": "number",
              "minimum": 0.1,
              "maximum": 3.0,
              "default": 0.5,
              "description": "Partikel-Dichte"
            },
            "color": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$",
              "default": "#A594D1",
              "description": "Standard-Partikel Farbe"
            },
            "size": {
              "type": "object",
              "properties": {
                "min": { "type": "number", "minimum": 0.5, "maximum": 10, "default": 1 },
                "max": { "type": "number", "minimum": 1, "maximum": 20, "default": 4 }
              }
            },
            "speed": {
              "type": "object",
              "properties": {
                "min": { "type": "number", "minimum": 0.1, "maximum": 5, "default": 0.5 },
                "max": { "type": "number", "minimum": 1, "maximum": 10, "default": 2 }
              }
            },
            "lifetime": {
              "type": "object",
              "properties": {
                "min": { "type": "number", "minimum": 1000, "maximum": 10000, "default": 2000 },
                "max": { "type": "number", "minimum": 2000, "maximum": 20000, "default": 6000 }
              }
            },
            "opacity": {
              "type": "object",
              "properties": {
                "start": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.8 },
                "end": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.1 }
              }
            }
          }
        },
        "interactive": {
          "type": "object",
          "description": "Interaktive Partikel-Effekte",
          "properties": {
            "hover": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": true },
                "attract": { "type": "boolean", "default": false, "description": "Partikel zu Cursor anziehen" },
                "repel": { "type": "boolean", "default": true, "description": "Partikel vom Cursor abstoßen" },
                "intensity": { "type": "number", "minimum": 0.1, "maximum": 3.0, "default": 1.5 }
              }
            },
            "click": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": true },
                "burst": { "type": "boolean", "default": true, "description": "Partikel-Burst bei Click" },
                "burstCount": { "type": "number", "minimum": 5, "maximum": 50, "default": 15 }
              }
            }
          }
        },
        "ambient": {
          "type": "object",
          "description": "Ambiente-Partikel für Hintergrund",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "type": {
              "type": "string",
              "enum": ["sparkles", "dust", "magic", "energy", "floating"],
              "default": "sparkles"
            },
            "areas": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["background", "ui-elements", "cards", "buttons", "inventory"]
              },
              "default": ["background"]
            }
          }
        },
        "spell": {
          "type": "object",
          "description": "Zauberspruch-spezifische Partikel",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "cast": {
              "type": "object",
              "properties": {
                "color": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#9C27B0" },
                "count": { "type": "number", "minimum": 10, "maximum": 100, "default": 25 },
                "pattern": { "type": "string", "enum": ["spiral", "burst", "stream", "circle"], "default": "spiral" }
              }
            },
            "impact": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": true },
                "color": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#FF4500" },
                "shockwave": { "type": "boolean", "default": true }
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "shimmer": {
      "type": "object",
      "description": "Shimmer/Schimmer-Effekte für UI-Elemente",
      "properties": {
        "base": {
          "type": "object",
          "required": ["color", "speed", "intensity"],
          "properties": {
            "color": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$",
              "default": "#7C6BAF",
              "description": "Shimmer-Farbe"
            },
            "speed": {
              "type": "number",
              "minimum": 0.1,
              "maximum": 5.0,
              "default": 1.0,
              "description": "Shimmer-Geschwindigkeit"
            },
            "intensity": {
              "type": "number",
              "minimum": 0.1,
              "maximum": 2.0,
              "default": 0.5,
              "description": "Shimmer-Intensität"
            },
            "width": {
              "type": "number",
              "minimum": 10,
              "maximum": 100,
              "default": 30,
              "description": "Shimmer-Streifenbreite in Pixeln"
            },
            "angle": {
              "type": "number",
              "minimum": 0,
              "maximum": 360,
              "default": 45,
              "description": "Shimmer-Winkel"
            }
          }
        },
        "elements": {
          "type": "object",
          "description": "Shimmer auf spezifischen UI-Elementen",
          "properties": {
            "buttons": { "type": "boolean", "default": true },
            "cards": { "type": "boolean", "default": false },
            "progress": { "type": "boolean", "default": true },
            "inventory": { "type": "boolean", "default": true },
            "text": { "type": "boolean", "default": false }
          }
        }
      }
    },
    "aura": {
      "type": "object",
      "description": "Aura-Effekte für spezielle Elemente",
      "properties": {
        "hover": {
          "type": "object",
          "required": ["enabled", "color"],
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "color": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#A594D1" },
            "radius": { "type": "number", "minimum": 5, "maximum": 30, "default": 12 },
            "intensity": { "type": "number", "minimum": 0.1, "maximum": 1.0, "default": 0.3 },
            "animated": { "type": "boolean", "default": true },
            "elements": {
              "type": "array",
              "items": { "type": "string", "enum": ["buttons", "cards", "inventory", "progress", "hud"] },
              "default": ["buttons", "inventory"]
            }
          }
        },
        "focus": {
          "type": "object",
          "description": "Focus-Aura für Accessibility",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "color": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$", "default": "#FFD700" },
            "width": { "type": "number", "minimum": 1, "maximum": 5, "default": 2 },
            "animated": { "type": "boolean", "default": false }
          }
        }
      }
    },
    "distortion": {
      "type": "object",
      "description": "Verzerrungseffekte für magische Bereiche",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "portal": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "intensity": { "type": "number", "minimum": 0.1, "maximum": 2.0, "default": 0.5 },
            "speed": { "type": "number", "minimum": 0.1, "maximum": 3.0, "default": 1.0 }
          }
        },
        "magic": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "ripple": { "type": "boolean", "default": true },
            "wave": { "type": "boolean", "default": false }
          }
        }
      }
    },
    "performance": {
      "type": "object",
      "description": "Performance-Optimierungen für Visual Effects",
      "properties": {
        "quality": {
          "type": "string",
          "enum": ["low", "medium", "high", "ultra"],
          "default": "high",
          "description": "Visual Effects Qualität"
        },
        "deviceTier": {
          "type": "object",
          "properties": {
            "low": {
              "type": "object",
              "properties": {
                "particles": { "type": "boolean", "default": false },
                "glow": { "type": "boolean", "default": true },
                "shimmer": { "type": "boolean", "default": false },
                "distortion": { "type": "boolean", "default": false }
              }
            },
            "medium": {
              "type": "object",
              "properties": {
                "particles": { "type": "boolean", "default": true },
                "glow": { "type": "boolean", "default": true },
                "shimmer": { "type": "boolean", "default": true },
                "distortion": { "type": "boolean", "default": false }
              }
            },
            "high": {
              "type": "object",
              "properties": {
                "particles": { "type": "boolean", "default": true },
                "glow": { "type": "boolean", "default": true },
                "shimmer": { "type": "boolean", "default": true },
                "distortion": { "type": "boolean", "default": true }
              }
            }
          }
        },
        "fps": {
          "type": "object",
          "properties": {
            "target": { "type": "number", "minimum": 30, "maximum": 120, "default": 60 },
            "adaptive": { "type": "boolean", "default": true, "description": "Adaptive Qualität basierend auf FPS" }
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "gradients": {
        "magic": {
          "colors": ["#7C6BAF", "#A594D1", "#FFD700"],
          "direction": "diagonal",
          "angle": 45,
          "animated": true,
          "animationSpeed": 0.8
        },
        "portal": {
          "colors": ["#4A90E2", "#7C6BAF", "#9C27B0"],
          "direction": "radial",
          "animated": true,
          "swirl": true
        }
      },
      "glow": {
        "base": {
          "color": "#A594D1",
          "radius": 8,
          "intensity": 0.6,
          "spread": 2
        },
        "hover": {
          "enabled": true,
          "color": "#FFD700",
          "intensityMultiplier": 1.5,
          "duration": 200
        }
      },
      "particles": {
        "base": {
          "enabled": true,
          "density": 0.3,
          "color": "#A594D1",
          "size": { "min": 1, "max": 3 },
          "speed": { "min": 0.5, "max": 1.5 }
        },
        "interactive": {
          "hover": {
            "enabled": true,
            "repel": true,
            "intensity": 1.2
          }
        }
      }
    }
  ]
}