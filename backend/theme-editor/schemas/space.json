{
  "$schema": "./main.schema.json",
  "name": "Space Station Alpha Theme",
  "filename": "space",
  "version": "1.0.0",
  "description": "Futuristisches Weltraum-Theme mit Deep-Space-Atmosphäre, Sterneneffekten und Station-Technologie",
  "category": "sci-fi",
  "author": "Weltenwind Team",
  "bundle": {
    "name": "full-gaming",
    "type": "sci_fi_world_bundle",
    "context": "world-scifi",
    "modules": ["colors", "typography", "spacing", "radius", "effects.visual", "effects.animations", "gaming.inventory", "gaming.progress", "gaming.hud"]
  },
  "colors": {
    "primary": {
      "value": "#191970",
      "description": "Tiefes Midnight-Blue für Hauptelemente"
    },
    "secondary": {
      "value": "#00CED1",
      "description": "Helles Aqua-Cyan für Tech-Akzente"
    },
    "tertiary": {
      "value": "#4169E1",
      "description": "Royal Blue für Sekundärfarben"
    },
    "background": {
      "surface_dark": "#000814",
      "surface_medium": "#001D3D",
      "surface_light": "#003566",
      "surface_lighter": "#0077B6",
      "surface_gray": "#495057"
    },
    "text": {
      "primary": "#E6F3FF",
      "secondary": "#B8D4E3",
      "muted": "#8DA3B0",
      "inverse": "#000814"
    },
    "accent": {
      "success": "#00FF9F",
      "warning": "#FFB700",
      "error": "#FF006E",
      "info": "#00D9FF"
    },
    "space": {
      "void": "#000814",
      "nebula": "#4361EE",
      "star": "#FFFFFF",
      "comet": "#00D9FF",
      "asteroid": "#6C757D",
      "plasma": "#9D4EDD",
      "antimatter": "#FF006E"
    },
    "station": {
      "hull": "#495057",
      "window": "#00D9FF",
      "reactor": "#9D4EDD",
      "thruster": "#FF9F1C",
      "navigation": "#00FF9F",
      "emergency": "#FF006E"
    }
  },
  "typography": {
    "fontFamilies": {
      "primary": "Rajdhani, sans-serif",
      "secondary": "Titillium Web, sans-serif",
      "mono": "Space Mono, monospace",
      "display": "Russo One, sans-serif",
      "ui": "Inter, sans-serif"
    },
    "textStyles": {
      "heading": {
        "fontSize": 30,
        "fontWeight": "bold",
        "fontFamily": "Russo One, sans-serif",
        "letterSpacing": 1.5,
        "lineHeight": 1.1,
        "textTransform": "uppercase"
      },
      "subheading": {
        "fontSize": 22,
        "fontWeight": "semi-bold",
        "fontFamily": "Rajdhani, sans-serif",
        "letterSpacing": 1.0,
        "lineHeight": 1.2
      },
      "body": {
        "fontSize": 16,
        "fontWeight": "normal",
        "fontFamily": "Titillium Web, sans-serif",
        "letterSpacing": 0.3,
        "lineHeight": 1.4
      },
      "caption": {
        "fontSize": 12,
        "fontWeight": "normal",
        "fontFamily": "Space Mono, monospace",
        "letterSpacing": 0.5,
        "lineHeight": 1.3
      },
      "display": {
        "fontSize": 36,
        "fontWeight": "bold",
        "fontFamily": "Russo One, sans-serif",
        "letterSpacing": 2.0,
        "lineHeight": 1.0,
        "textTransform": "uppercase"
      }
    }
  },
  "spacing": {
    "xs": 3,
    "sm": 6,
    "md": 12,
    "lg": 20,
    "xl": 32,
    "xxl": 48,
    "semantic": {
      "padding": {
        "small": 8,
        "medium": 16,
        "large": 24
      },
      "margin": {
        "small": 6,
        "medium": 12,
        "large": 20
      },
      "station": {
        "moduleGap": 20,
        "corridorWidth": 40,
        "portholePadding": 16,
        "consoleSpacing": 24
      }
    }
  },
  "radius": {
    "sm": 3,
    "md": 6,
    "lg": 9,
    "xl": 12,
    "round": 9999,
    "space": {
      "porthole": 9999,
      "module": 6,
      "console": 3,
      "screen": 12
    }
  },
  "effects": {
    "shadows": {
      "small": "0 2px 4px rgba(25, 25, 112, 0.3)",
      "medium": "0 4px 8px rgba(25, 25, 112, 0.4)",
      "large": "0 8px 16px rgba(25, 25, 112, 0.5)",
      "void": "0 0 30px rgba(0, 0, 0, 0.9)"
    },
    "glows": {
      "station": "0 0 20px rgba(0, 206, 209, 0.6)",
      "star": "0 0 15px rgba(255, 255, 255, 0.8)",
      "reactor": "0 0 25px rgba(157, 78, 221, 0.7)",
      "thruster": "0 0 20px rgba(255, 159, 28, 0.8)",
      "emergency": "0 0 15px rgba(255, 0, 110, 0.9)"
    },
    "animations": {
      "duration": {
        "fast": 200,
        "medium": 400,
        "slow": 800,
        "orbit": 5000,
        "stellar": 10000
      },
      "easing": {
        "standard": "cubic-bezier(0.4, 0.0, 0.2, 1)",
        "space": "cubic-bezier(0.25, 0.46, 0.45, 0.94)",
        "drift": "linear"
      }
    },
    "particles": {
      "stars": {
        "color": "#FFFFFF",
        "size": 1,
        "density": 1.0,
        "speed": 0.1,
        "movement": "twinkling"
      },
      "debris": {
        "color": "#6C757D",
        "size": 2,
        "density": 0.3,
        "speed": 0.8,
        "movement": "floating"
      },
      "energy": {
        "color": "#00CED1",
        "size": 3,
        "density": 0.5,
        "speed": 1.2,
        "movement": "flowing"
      },
      "plasma": {
        "color": "#9D4EDD",
        "size": 4,
        "density": 0.2,
        "speed": 2.0,
        "movement": "spiraling"
      }
    },
    "backgrounds": {
      "starfield": {
        "type": "procedural",
        "density": "high",
        "movement": "parallax"
      },
      "nebula": {
        "type": "gradient",
        "colors": ["#000814", "#001D3D", "#4361EE"],
        "animation": "drift"
      }
    }
  },
  "gaming": {
    "inventory": {
      "slotSize": 50,
      "slotSpacing": 3,
      "backgroundColor": "#001D3D",
      "borderColor": "#00CED1",
      "hoverColor": "#4169E1",
      "techFrame": true,
      "energyGlow": true
    },
    "progress": {
      "barHeight": 8,
      "backgroundColor": "#000814",
      "fillColor": "#00CED1",
      "textColor": "#E6F3FF",
      "energyFlow": true,
      "scanlines": true
    },
    "hud": {
      "backgroundColor": "rgba(0, 29, 61, 0.95)",
      "borderColor": "#00CED1",
      "textColor": "#E6F3FF",
      "accentColor": "#4169E1",
      "holographic": true,
      "dataStreams": true
    }
  },
  "extensions": {
    "worldTheme": {
      "atmosphere": "deep-space-station",
      "timeOfDay": "eternal-void",
      "weather": "solar-storm",
      "ambientSound": "station-hum"
    },
    "space": {
      "sectors": {
        "command": {
          "primaryColor": "#4169E1",
          "accentColor": "#00CED1"
        },
        "engineering": {
          "primaryColor": "#FF9F1C",
          "accentColor": "#FFB700"
        },
        "medical": {
          "primaryColor": "#00FF9F",
          "accentColor": "#00D9FF"
        },
        "weapons": {
          "primaryColor": "#FF006E",
          "accentColor": "#9D4EDD"
        },
        "quarters": {
          "primaryColor": "#495057",
          "accentColor": "#8DA3B0"
        }
      },
      "systems": {
        "life_support": "#00FF9F",
        "navigation": "#00D9FF",
        "communications": "#4169E1",
        "shields": "#9D4EDD",
        "weapons": "#FF006E",
        "engines": "#FF9F1C"
      }
    },
    "stellar": {
      "phenomena": {
        "blackhole": {
          "primaryColor": "#000000",
          "accentColor": "#4361EE"
        },
        "pulsar": {
          "primaryColor": "#FFFFFF",
          "accentColor": "#00D9FF"
        },
        "quasar": {
          "primaryColor": "#9D4EDD",
          "accentColor": "#FF006E"
        },
        "supernova": {
          "primaryColor": "#FF9F1C",
          "accentColor": "#FFB700"
        }
      },
      "elements": {
        "hydrogen": "#E6F3FF",
        "helium": "#FFE135",
        "carbon": "#6C757D",
        "oxygen": "#00D9FF",
        "iron": "#B07C5B",
        "uranium": "#00FF9F"
      }
    }
  }
}